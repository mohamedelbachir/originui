  "files": [
    {
      "path": "registry/default/blocks/cards-expandable-card.tsx",
      "content": "\"use client\";\r\r\n\r\r\nimport { Button } from \"@/registry/default/ui/button\";\r\r\nimport {\r\r\n  Card,\r\r\n  CardContent,\r\r\n  CardDescription,\r\r\n  CardFooter,\r\r\n  CardHeader,\r\r\n  CardTitle,\r\r\n} from \"@/registry/default/ui/card\";\r\r\nimport { useState } from \"react\";\r\r\nimport { ChevronDownIcon } from \"lucide-react\";\r\r\n\r\r\nexport default function ExpandableCard() {\r\r\n  const [isExpanded, setIsExpanded] = useState(false);\r\r\n\r\r\n  return (\r\r\n    <div className=\"max-w-md mx-auto py-6 px-4\">\r\r\n      <Card className=\"transition-all duration-300\">\r\r\n        <CardHeader>\r\r\n          <CardTitle>Create project</CardTitle>\r\r\n          <CardDescription>\r\r\n            Deploy your new project in one-click.\r\r\n          </CardDescription>\r\r\n        </CardHeader>\r\r\n        <CardContent>\r\r\n          <p className=\"text-sm text-muted-foreground\">\r\r\n            Your new project will be created with the latest version of our\r\r\n            framework, complete with authentication, database, and API routes.\r\r\n          </p>\r\r\n\r\r\n          <div\r\r\n            className={`overflow-hidden transition-all duration-300 ${\r\r\n              isExpanded ? \"max-h-[500px] mt-4\" : \"max-h-0\"\r\r\n            }`}\r\r\n          >\r\r\n            <div className=\"space-y-4 pt-2 border-t\">\r\r\n              <h4 className=\"text-sm font-medium\">Additional Features:</h4>\r\r\n              <ul className=\"text-sm text-muted-foreground space-y-2\">\r\r\n                <li>• Responsive design for all devices</li>\r\r\n                <li>• Dark mode support</li>\r\r\n                <li>• SEO optimization</li>\r\r\n                <li>• Performance monitoring</li>\r\r\n                <li>• Automatic backups</li>\r\r\n              </ul>\r\r\n            </div>\r\r\n          </div>\r\r\n        </CardContent>\r\r\n        <CardFooter className=\"flex justify-between\">\r\r\n          <Button variant=\"outline\">Cancel</Button>\r\r\n          <div className=\"flex items-center gap-2\">\r\r\n            <Button\r\r\n              variant=\"ghost\"\r\r\n              size=\"icon\"\r\r\n              onClick={() => setIsExpanded(!isExpanded)}\r\r\n              className=\"rounded-full\"\r\r\n            >\r\r\n              <ChevronDownIcon\r\r\n                className={`h-5 w-5 transition-transform duration-300 ${\r\r\n                  isExpanded ? \"rotate-180\" : \"\"\r\r\n                }`}\r\r\n              />\r\r\n            </Button>\r\r\n            <Button>Deploy</Button>\r\r\n          </div>\r\r\n        </CardFooter>\r\r\n      </Card>\r\r\n    </div>\r\r\n  );\r\r\n}\r\r\n",
      "type": "registry:block"
    }
  ],
  "meta": {
    "tags": [
