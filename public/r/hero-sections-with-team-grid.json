{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "hero-sections-with-team-grid",
  "type": "registry:block",
  "registryDependencies": [
    "https://ui.woilasoft.com/r/avatar.json",
    "https://ui.woilasoft.com/r/badge.json",
    "https://ui.woilasoft.com/r/button.json"
  ],
  "files": [
    {
      "path": "registry/default/blocks/hero-sections-with-team-grid.tsx",
      "content": "import { Button } from \"@/registry/default/ui/button\";\r\r\nimport { Badge } from \"@/registry/default/ui/badge\";\r\r\nimport { Avatar, AvatarImage, AvatarFallback } from \"@/registry/default/ui/avatar\";\r\r\n\r\r\nexport default function HeroSectionWithTeamGrid() {\r\r\n  const team = [\r\r\n    {\r\r\n      name: \"Sarah Wilson\",\r\r\n      role: \"Product Lead\",\r\r\n      image: \"https://placehold.co/400x400.jpeg?text=SW\",\r\r\n      initials: \"SW\",\r\r\n    },\r\r\n    {\r\r\n      name: \"Alex Chen\",\r\r\n      role: \"Lead Designer\",\r\r\n      image: \"https://placehold.co/400x400.jpeg?text=AC\",\r\r\n      initials: \"AC\",\r\r\n    },\r\r\n    {\r\r\n      name: \"Michael Park\",\r\r\n      role: \"Tech Lead\",\r\r\n      image: \"https://placehold.co/400x400.jpeg?text=MP\",\r\r\n      initials: \"MP\",\r\r\n    },\r\r\n    {\r\r\n      name: \"Emma Davis\",\r\r\n      role: \"Marketing Head\",\r\r\n      image: \"https://placehold.co/400x400.jpeg?text=ED\",\r\r\n      initials: \"ED\",\r\r\n    },\r\r\n  ];\r\r\n\r\r\n  return (\r\r\n    <>\r\r\n      {/* Hero */}\r\r\n      <div className=\"container mx-auto px-4 md:px-6 2xl:max-w-[1400px] py-24 lg:py-32\">\r\r\n        <div className=\"relative\">\r\r\n          {/* Background Pattern */}\r\r\n          <div className=\"absolute inset-0 -z-10\">\r\r\n            <div className=\"absolute inset-0 bg-grid-slate-900/[0.04] bg-[size:75px_75px] dark:bg-grid-slate-400/[0.05]\" />\r\r\n            <div className=\"absolute inset-0 bg-gradient-to-t from-background via-transparent\" />\r\r\n          </div>\r\r\n\r\r\n          <div className=\"text-center max-w-3xl mx-auto mb-16\">\r\r\n            <Badge variant=\"outline\" className=\"mb-4\">\r\r\n              Join Our Team\r\r\n            </Badge>\r\r\n            <h1 className=\"scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl mb-4\">\r\r\n              Built by developers, for developers\r\r\n            </h1>\r\r\n            <p className=\"text-xl text-muted-foreground mb-8\">\r\r\n              Join a team of passionate developers building the next generation\r\r\n              of web applications with cutting-edge technology.\r\r\n            </p>\r\r\n            <div className=\"flex flex-col sm:flex-row justify-center gap-3\">\r\r\n              <Button size=\"lg\">\r\r\n                View Open Positions\r\r\n                <svg\r\r\n                  xmlns=\"http://www.w3.org/2000/svg\"\r\r\n                  width=\"24\"\r\r\n                  height=\"24\"\r\r\n                  viewBox=\"0 0 24 24\"\r\r\n                  fill=\"none\"\r\r\n                  stroke=\"currentColor\"\r\r\n                  strokeWidth=\"2\"\r\r\n                  strokeLinecap=\"round\"\r\r\n                  strokeLinejoin=\"round\"\r\r\n                  className=\"ml-2 h-4 w-4\"\r\r\n                >\r\r\n                  <path d=\"M5 12h14\" />\r\r\n                  <path d=\"m12 5 7 7-7 7\" />\r\r\n                </svg>\r\r\n              </Button>\r\r\n              <Button size=\"lg\" variant=\"outline\">\r\r\n                Meet the Team\r\r\n              </Button>\r\r\n            </div>\r\r\n          </div>\r\r\n\r\r\n          {/* Team Grid */}\r\r\n          <div className=\"grid sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto\">\r\r\n            {team.map((member) => (\r\r\n              <div key={member.name} className=\"text-center\">\r\r\n                <div className=\"relative mx-auto mb-4\">\r\r\n                  <Avatar className=\"w-32 h-32 mx-auto relative\">\r\r\n                    <AvatarImage src={member.image} alt={member.name} />\r\r\n                    <AvatarFallback>{member.initials}</AvatarFallback>\r\r\n                  </Avatar>\r\r\n                </div>\r\r\n                <h3 className=\"font-semibold text-lg mb-1\">{member.name}</h3>\r\r\n                <p className=\"text-muted-foreground\">{member.role}</p>\r\r\n              </div>\r\r\n            ))}\r\r\n          </div>\r\r\n\r\r\n          {/* Stats */}\r\r\n          <div className=\"grid sm:grid-cols-3 gap-8 max-w-4xl mx-auto mt-16 text-center\">\r\r\n            <div>\r\r\n              <h4 className=\"text-4xl font-bold mb-2\">50+</h4>\r\r\n              <p className=\"text-muted-foreground\">Team Members</p>\r\r\n            </div>\r\r\n            <div>\r\r\n              <h4 className=\"text-4xl font-bold mb-2\">20+</h4>\r\r\n              <p className=\"text-muted-foreground\">Countries</p>\r\r\n            </div>\r\r\n            <div>\r\r\n              <h4 className=\"text-4xl font-bold mb-2\">98%</h4>\r\r\n              <p className=\"text-muted-foreground\">Satisfaction Rate</p>\r\r\n            </div>\r\r\n          </div>\r\r\n        </div>\r\r\n      </div>\r\r\n      {/* End Hero */}\r\r\n    </>\r\r\n  );\r\r\n}\r\r\n",
      "type": "registry:block"
    }
  ],
  "meta": {
    "tags": [
      "hero-sections"
    ]
  }
}